{
    "files.associations": {
        "*.h": "cpp",
        "*.cpp": "cpp",
        "*.mm": "objective-cpp"
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "files.exclude": {
        "build/**": false,
        "**/build/**": false
    },
    "search.exclude": {
        "**/build": false
    }
}